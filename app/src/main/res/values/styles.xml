<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="TryFregeTheme">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/FregeActionBar</item>
    </style>

    <style name="FregeActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#800020</item>
        <item name="android:icon">@drawable/ic_frege</item>
        <item name="android:logo">@drawable/ic_frege</item>
        <item name="logo">@drawable/ic_frege</item>
    </style>

    <style name="TryFregeTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_material_dark_1</item>
        <item name="android:icon">@drawable/ic_frege</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/primary_material_dark_1</item>
    </style>

</resources>
